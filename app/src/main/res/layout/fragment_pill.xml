<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_pills"
    android:orientation="vertical"
    tools:context=".presentation.ui.fragments.pill.PillFragment">

    <com.unifit.unifit.presentation.ui.customs.BackButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/pills"
        android:background="@color/transparent_white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        style="@style/TextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivAddPill"
        android:layout_gravity="right"
        android:src="@drawable/baseline_add_24"
        android:layout_width="@dimen/baseline_size"
        android:layout_height="@dimen/baseline_size"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <TextView
        android:text="@string/analysis"
        android:background="@color/transparent_white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        style="@style/TextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivAddAnalys"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:src="@drawable/baseline_add_24"
        android:layout_width="@dimen/baseline_size"
        android:layout_height="@dimen/baseline_size"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAnalysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>
</layout>