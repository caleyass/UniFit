<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/padding_textview_title</item>
    </style>

    <style name="TextViewTitle2">
        <item name="android:textSize">@dimen/text_size_title2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/padding_textview_title</item>
    </style>

    <style name="TextViewPlainBald">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewPlain">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewPlainSmall" parent="TextViewPlain">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonPlain">
        <item name="android:backgroundTint">@color/green_deep</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/padding_button_plain</item>
    </style>

    <style name="ButtonPlainSmall" parent="ButtonPlain">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/padding_button_small</item>
    </style>

    <style name="NumberPickerTextColorStyle">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
        <item name="cardBackgroundColor">@color/transparent_white</item>
        <item name="elevation">0dp</item>
        <item name="android:layout_margin">@dimen/margin_10</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/green_deep</item>
    </style>
</resources>